<header>
  <ul>
    <li> <%= link_to "Home", root_path %> </li>
    <li> <%= link_to "Shelters", "/shelters" %> </li>
    <li> <%= link_to "Pets", "/pets" %> </li>
  </ul>
</header>

<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <!-- <h2><%= pet.name %></h2> -->
  <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
  <%= image_tag(pet.image, alt: "A photo of #{pet.name}", size: "300") %>
  <ul>
    <li>Age: <%= pet.age %></li>
    <li>Sex: <%= pet.sex %></li>
    <li>Shelter: <%= Shelter.find(pet.shelter_id).name %></li>
  </ul>
  <%= link_to "Update Pet", "/pets/#{pet.id}/edit", id: "#{pet.name.gsub(" ", "")}Edit" %>
  <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete, id: "#{pet.name.gsub(" ", "")}Delete" %>
<% end %>
